<div ng-app="LandingModule">
<%- partial('layouts/header') %>
<div class="col-md-8 col-md-offset-2">
  <div class="jumbotron">
    <h1>Asian sweatshop...</h1>
    <h2>...selling anything useful cheaper than the prices of the european counterparts since 1899.</h2>
    <a href="/signup" class="btn btn-lg btn-success">Sign up now!</a>
  </div>
  <div class="container" ng-controller="ItemListController">
    <h2>Featured</h2>
    <div class="product-slider">
      <div class="item" ng-repeat="i in items">
        <div class="product">
          <div class="flip-container">
            <div class="flipper">
              <div class="front">
                <a href="/item/{{ i.id }}">
                  <img src="img/product1.jpg" alt="" class="img-responsive">
                </a>
              </div>
              <div class="back">
                <a href="/item/{{ i.id }}">
                  <img src="img/product1_2.jpg" alt="" class="img-responsive">
                </a>
              </div>
            </div>
          </div>
          <a href="/item/{{ i.id }}" class="invisible">
            <img src="img/product1.jpg" alt="" class="img-responsive">
          </a>
          <div class="text">
            <h3><a href="/item/{{ i.id }}">{{ i.name }}</a></h3>
            <p class="price">${{ i.price }}</p>
          </div>
          <!-- /.text -->
        </div>
        <!-- /.product -->
      </div>
