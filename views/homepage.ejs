          <!--<h2>{{ i.name }}</h2>-->
          <!--{{ i.price }}<br>-->
          <!--<a href="/item/{{ i.id }}">View</a>-->
        <!--</div>-->
      <!--</div>-->
    </div>
  </div>
</div>
</div>
