<div class="container" ng-app="userList" ng-controller="userListController">
  <h3>Users</h3>
  <table class="table">
    <tr>
      <th>Username</th>
      <th>E-mail</th>
      <th>Name</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <tr ng-repeat="u in users">
      <td>{{ u.username }}</td>
      <td>{{ u.email }}</td>
      <td>{{ u.name }}</td>
      <td>{{ u.role.name }}</td>
      <td><a href="#">Show</a></td>
      <td><a href="#">Edit</a></td>
      <td><a href="#">Delete</a></td>
    </tr>

  </table>
</div>
