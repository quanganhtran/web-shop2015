<div ng-app="myOrderModule" ng-controller="myOrderController" ng-cloak style="text-align: center;">
  <%- partial('../layouts/header') %>
  <h3>Your Orders</h3>

  <table class="table">
    <tr>
      <th>Order ID</th>
      <th>Total Item</th>
      <th>Image</th>
      <th>price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Grand Total</th>
    </tr>
    <tr ng-repeat="o in orders">
      <td>{{ o.id }}</td>
      <td>{{ o.orderDetails[0].order }}</td>
    </tr>
  </table>
  <table class="table">
    <tr>
      <th>Item Name</th>
    </tr>
    <tr ng-repeat="od in orders.orderDetails">
      <td>{{ od }}</td>
    </tr>
  </table>

</div>
<script type="text/javascript" src="js/pages/myOrder.js"></script>
