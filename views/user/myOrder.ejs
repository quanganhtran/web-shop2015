<div ng-app="myOrderModule" ng-controller="myOrderController" ng-cloak style="text-align: center;">
  <%- partial('../layouts/header') %>
  <h3>Your Orders</h3>

  <table class="table" >
    <tr>
      <th>Order ID</th>
      <th>Order Date</th>
      <th></th>
    </tr>
    <tr ng-repeat="o in orders">
      <td>{{ o.id }}</td>
      <td>{{ o.createdAt }}</td>
    </tr>
  </table>

  <table class="table">
    <tr>
      <th>Item Name</th>
    </tr>
    <tr ng-repeat="od in orderDetails">
      <td>{{ od.item.name }}</td>
    </tr>
  </table>
{{ orders }}
</div>
<script type="text/javascript" src="js/pages/myOrder.js"></script>
